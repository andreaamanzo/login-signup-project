# === EMAIL CONFIGURATION ===

# Email address used to send confirmation and password reset emails
EMAIL=your_email@example.com

# App-specific password for your email provider (e.g., Gmail)
EMAIL_PASSWORD=your_app_password_here


# === JWT CONFIGURATION ===

# Secret key used to sign JWT tokens (use a long random string)
JWT_SECRET=your_jwt_secret_key_here


# === SERVER CONFIGURATION ===

# Host on which the server will run (e.g., 0.0.0.0 for Docker)
SITE_HOST=0.0.0.0

# Port the server will listen on
PORT=8080


# === DATABASE CONFIGURATION ===

# MySQL database host (e.g., 'mysql' for Docker, or 'localhost' for local dev)
DB_HOST=mysql

# MySQL database name
DB_NAME=login-signup-project-db

# MySQL username (created on container startup)
DB_USER=user

# MySQL user password
DB_USER_PASSWORD=your_db_user_password

# MySQL root password (used by phpMyAdmin or for full admin access)
DB_ROOT_PASSWORD=your_mysql_root_password
