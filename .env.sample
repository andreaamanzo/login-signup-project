# --- EMAIL CONFIGURATION ---

# Email address used to send confirmation emails
EMAIL=your_email@example.com

# App-specific password (e.g. from Gmail or other provider)
EMAIL_PASSWORD=your_app_password_here


# --- JWT CONFIGURATION ---

# Secret key used to sign JWT tokens (use a long random string)
JWT_SECRET=your_jwt_secret_key_here


# --- SERVER CONFIGURATION ---

# Host on which the server will run (e.g., 0.0.0.0 or localhost)
SITE_HOST=0.0.0.0

# Port the server will listen on
PORT=8080


# --- DATABASE CONFIGURATION ---

# MySQL database host (e.g., localhost or Docker service name)
DB_HOST=your_database_host_here

# MySQL username (e.g., root)
DB_USER=root

# MySQL password for the specified user
DB_PASSWORD=your_db_password_here

# Name of the MySQL database to use
DB_NAME=your_database_name_here
